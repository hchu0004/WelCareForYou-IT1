@model WelCareForYou_IT1.Models.Client
@{
	ViewBag.Title = "Housing";
}

<p></p>
<!DOCTYPE html>

<html lang="en">
<head>
	<title>WelCareForYou -- Get More renting options</title>
	<link rel='stylesheet' href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700,800,900" rel="stylesheet">

	<link rel="stylesheet" href="~/Content/css/open-iconic-bootstrap.min.css">
	<link rel="stylesheet" href="~/Content/css/animate.css">

	<link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
	<link rel="stylesheet" href="~/Content/css/magnific-popup.css">

	<link rel="stylesheet" href="~/Content/css/aos.css">

	<link rel="stylesheet" href="~/Content/css/ionicons.min.css">

	<link rel="stylesheet" href="~/Content/css/bootstrap-datepicker.css">
	<link rel="stylesheet" href="~/Content/css/jquery.timepicker.css">

	<link rel="stylesheet" href="~/Content/css/flaticon.css">
	<link rel="stylesheet" href="~/Content/css/icomoon.css">
	<link rel="stylesheet" href="~/Content/css/style.css">
</head>
<body>
	<section class="hero-wrap js-fullheight" style="background-image: url('../Content/images/house.jpg');" data-section="home">
		<div class="overlay"></div>
		<div class="container">
			<div class="row no-gutters slider-text js-fullheight align-items-center justify-content-end" data-scrollax-parent="true">
				<div class="col-md-6 ftco-animate" data-scrollax=" properties: { translateY: '30%' }">
					<h1 class="mb-4" data-scrollax="properties: { translateY: '10%', opacity: 1.6 }">We Provide Cheaper Renting Options for You</h1>
					<p class="mb-4" data-scrollax="properties: { translateY: '10%', opacity: 1.6 }"> Based on analysis,families or individuals spending more than 30% of their income on rent do face the possibility of being homeless  </p>
					<div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">

					</div>
				</div>
			</div>
		</div>
	</section>

	
	@using (Html.BeginForm("Result", "Questionnaire", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<div class="container">
			<form action="https://app.99inbound.com/e/123" method="POST" target="_blank">
				<div class="col-md-10 heading-section text-center ftco-animate">
					<p>

					</p>
				</div>

				<div class="form-group">
					<div class="col-md-10">
						<div class="input-group-prepend">
							<span class="input-group-text bg-white">
								<i class="fa fa-paw"></i>
							</span>

							@Html.EditorFor(model => model.AgeGroup, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your age" } })
							@Html.ValidationMessageFor(model => model.AgeGroup, "", new { @class = "text-danger" })
						</div>
						</div>
					</div>

	
				<div class="form-group">

					<div class="col-md-10">
						<div class="input-group-prepend">
							<span class="input-group-text bg-white">
								<i class="fa fa-user-circle"></i>
							</span>
							@Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your gender" } })
							@Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>


				<div class="form-group">

					<div class="col-md-10">
						<div class="input-group-prepend">
							<span class="input-group-text bg-white">
								<i class="fa fa-home"></i>
							</span>
							@Html.EditorFor(model => model.NumOfRoom, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter number of rooms you need" } })
							@Html.ValidationMessageFor(model => model.NumOfRoom, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="form-group">
					
					<div class="col-md-10">
						<div class="input-group-prepend">
							<span class="input-group-text bg-white">
								<i class="fa fa-map-marker"></i>
							</span>
							@Html.EditorFor(model => model.SuburbSuburbName, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your current living suburb" } })
							@Html.ValidationMessageFor(model => model.SuburbSuburbName, "", new { @class = "text-danger" })
						</div>
					</div>
					</div>

				<div class="form-group">
					
					<div class="col-md-10">
						<div class="input-group-prepend">
							<span class="input-group-text bg-white">
								<i class="fa fa-bank"></i>
							</span>
							@Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your current salary (per week)" } })
							@Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
						</div>
					</div>
					</div>

				<div class="form-group">
					<div class="col-md-10">
						<div class="input-group-prepend">
							<span class="input-group-text bg-white">
								<i class="fa fa-paper-plane"></i>
							</span>
							
								<input type="text" id="rent" class="form-control" placeholder="Please enter your current rent (per week)" required="required" name="rent">
								<p class="help-block text-danger"></p>
							</div>
						</div>
					</div>


				<button type="submit" class="btn btn-primary float-md-left" value="Result">
					<i class="fa fa-paper-plane"></i>
					Get your rent options! 
				</button>
				<p>                    </p>
			</form>
		</div>

	}


	<script src="~/Content/js/jquery.min.js"></script>
	<script src="~/Content/js/jquery-migrate-3.0.1.min.js"></script>
	<script src="~/Content/js/popper.min.js"></script>
	<script src="~/Content/js/bootstrap.min.js"></script>
	<script src="~/Content/js/jquery.easing.1.3.js"></script>
	<script src="~/Content/js/jquery.waypoints.min.js"></script>
	<script src="~/Content/js/jquery.stellar.min.js"></script>
	<script src="~/Content/js/owl.carousel.min.js"></script>
	<script src="~/Content/js/jquery.magnific-popup.min.js"></script>
	<script src="~/Content/js/aos.js"></script>
	<script src="~/Content/js/jquery.animateNumber.min.js"></script>
	<script src="~/Content/js/bootstrap-datepicker.js"></script>
	<script src="~/Content/js/jquery.timepicker.min.js"></script>
	<script src="~/Content/js/scrollax.min.js"></script>

	<script src="~/Content/js/main.js"></script>

</body>
</html>